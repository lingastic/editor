{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "useDefineForClassFields": false,
    "typeRoots": [
      "node_modules/@types"
       ],
       "target": "es2022",
       "module": "esnext",
       "lib": ["es2020", "dom"]
  }
}
